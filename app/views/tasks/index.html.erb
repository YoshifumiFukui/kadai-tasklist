<h1>タスク一覧</h1>
<div class='row'>
  <div class='col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-2 col-lg-8'>
    <table class="table">
      <tr>
        <th>ID</th>
        <th>STATUS</th>
        <th>CONTENT</th>
      </tr>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </table>
    
    <%= paginate @tasks %><br>
    <%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-default" %>
  </div>
</div>