<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">id = <%= @task.id %>のタスク詳細ページ</h3></h3>
  </div>
  <div class="panel-body">
    <ul class="list-unstyled">
      <li><a href="#">ステータス：<%= @task.status %></a></li>
      <li><a href="#">タスク：<%= @task.content %></a></li>
    </ul>
  </div>
</div>

<%= link_to '一覧に戻る', tasks_path, class: 'btn btn-default' %>
<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-warning' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してもよろしいですか？'}, class: 'btn btn-danger' %>